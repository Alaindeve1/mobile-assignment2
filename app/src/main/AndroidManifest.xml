<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet Permission for opening websites -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: For direct phone calls (if you want to use ACTION_CALL instead of ACTION_DIAL) -->
    <!-- <uses-permission android:name="android.permission.CALL_PHONE" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assignment2"
        tools:targetApi="31">

        <!-- LoginActivity - Main/Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Assignment2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignUpActivity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Assignment2" />

        <!-- UserDetailsActivity -->
        <activity
            android:name=".UserDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.Assignment2" />

        <!-- StudentListActivity (NEW) -->
        <activity
            android:name=".StudentListActivity"
            android:exported="false"
            android:theme="@style/Theme.Assignment2" />

    </application>

</manifest>