<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".UserDetailsActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp">

        <!-- Profile Image Placeholder -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/profile_circle_background"
            android:layout_marginBottom="16dp" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#262626"
            android:layout_marginBottom="8dp" />

        <!-- User Info -->
        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textSize="14sp"
            android:textColor="#8E8E8E"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- User Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <!-- Source Information -->
        <TextView
            android:id="@+id/tvSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source: Login"
            android:textSize="12sp"
            android:textColor="#1877F2"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name: John Doe"
            android:textSize="16sp"
            android:textColor="#262626"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:background="#F8F8F8"
            android:visibility="visible" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="16sp"
            android:textColor="#262626"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:background="#F8F8F8" />

        <!-- Gender -->
        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender: Male"
            android:textSize="16sp"
            android:textColor="#262626"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:background="#F8F8F8"
            android:visibility="visible" />

        <!-- Newsletter Status -->
        <TextView
            android:id="@+id/tvNewsletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newsletter: Subscribed"
            android:textSize="16sp"
            android:textColor="#262626"
            android:padding="8dp"
            android:background="#F8F8F8"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Edit Profile"
            android:textColor="#1877F2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/outline_button_background"
            android:layout_marginBottom="12dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Log Out"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/logout_button_background" />

    </LinearLayout>

    <!-- Footer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instagram Clone â€¢ Assignment #2"
        android:textSize="12sp"
        android:textColor="#8E8E8E"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

</LinearLayout>